        gap: 10px;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-items: flex-start;
        width: 100%;
    }
    
    .highlight-tab {
        font-size: 15px;
        line-height: 128%;
        padding: 12px 16px;
        height: 43px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;
        width: fit-content;
        white-space: nowrap !important;
        min-width: fit-content;
        max-width: 200px;
        text-align: center;
        overflow: hidden;
        text-overflow: ellipsis;
        word-break: keep-all;
        word-wrap: normal;
        flex-shrink: 0;
    }
    
    .highlight-post {
        padding: 24px;
        gap: 16px;
        flex-direction: column;
    }
    
    .highlight-content {
        gap: 12px;
        max-width: 100%;
    }
    
    .highlight-image {
        width: 100%;
        aspect-ratio: 4/3;
        object-fit: cover;
        border-radius: 8px;
    }
    
    /* 포스트 그리드 */
    .posts-grid {
        grid-template-columns: 1fr;
        gap: 30px 30px;
        row-gap: 60px;
    }
    
    .post-card {
        border-radius: 8px;
    }
    
    .post-image {
        height: 180px;
    }
    
    .post-content {
        padding: 20px 4px 0 4px;
    }
    
    .post-title {
        font-size: 20px;
        line-height: 128%;
        margin-bottom: 16px;
        color: #161616;
    }
    
    .post-meta {
        font-size: 12px;
        line-height: 128%;
    }
    
    .post-category {
        font-size: 12px;
        line-height: 128%;
        margin-bottom: 8px;
    }
    
    /* 작가 섹션 */
    .writers-section {
        padding: 40px 0 40px 0;
    }
    
    .writer-card {
        width: 180px;
        height: 160px;
        padding: 12px;
        transform: translateY(0);
        box-shadow: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .writer-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
        background-color: #ffffff;
        border: 0.5px solid rgba(0, 0, 0, 0.15);
    }
    

    
    .writer-profile {
        margin-bottom: 8px;
        gap: 8px;
    }
    
    .writer-avatar {
        width: 32px;
        height: 32px;
    }
    
    .writer-name {
        font-size: 13px;
    }
    
    .writer-title {
        font-size: 11px;
    }
    
    .writer-article-title {
        font-size: 13px;
        margin-bottom: 4px;
    }
    
    .writer-article-excerpt {
        font-size: 11px;
    }
    
    .writers-rolling-container {
        max-width: 100%;
        padding: 10px 0;
        overflow-x: hidden;
        overflow-y: visible;
    }
    
    .writers-rolling-container::before,
    .writers-rolling-container::after {
        width: 30px;
    }
    
    .writers-rolling-track {
        animation-duration: 15s;
        gap: 16px;
    }
    
    /* 구독 섹션 */
    .subscribe-section {
        padding: 64px 0 80px 0;
    }
    
    .subscribe-form {
        flex-direction: column;
        gap: 10px;
    }
    
    .subscribe-input {
        height: 40px;
        font-size: 14px;
    }
    
    .subscribe-button {
        height: 40px;
        font-size: 14px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    /* 푸터 */
    .footer {
    }
    
    .footer-content {
        grid-template-columns: 1fr;
    }
    
    .footer-right {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .footer-link {
        font-size: 14px;
    }
    
    .footer-bottom p {
        font-size: 14px;
    }
}

/* Article Detail Page Styles - Based on Figma Design */

/* Article Detail Main */
.article-detail-main {
    background-color: transparent;
}

/* Article Section */
.article-section {
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
    position: relative;
    padding: 100px 0 160px 0;
}

.article-top {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 800px;
    margin: 0 auto 80px auto;
}

.article-text {
    width: 100%;
    margin-bottom: 48px;
}

.article-category-info {
    margin-bottom: 28px;
}

.article-category-tag {
    font-family: 'Hubot Sans', sans-serif;
    font-size: 15px;
    font-weight: 500;
    color: #161616;
    letter-spacing: -0.3px;
    line-height: 19.2px;
}

.article-main-title {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 44px;
    font-weight: 600;
    color: #161616;
    letter-spacing: -0.88px;
    line-height: 56.32px;
    margin-bottom: 28px;
}

.article-author-info {
    display: flex;
    align-items: center;
    gap: 10px;
}

.author-profile {
    display: flex;
    align-items: center;
    gap: 8px;
    width: fit-content;
}

.author-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    overflow: hidden;
    background-color: #dfdfdf;
}

.author-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.author-name {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #6f6f6f;
    letter-spacing: -0.28px;
    line-height: 17.92px;
}

/* Hero banner 안의 author-name만 흰색으로 */
.hero-banner .author-name {
    color: #ffffff;
}

.article-dot {
    width: 2px !important;
    height: 2px !important;
    background-color: currentColor !important;
    border-radius: 50% !important;
    display: inline-block !important;
    flex-shrink: 0 !important;
    color: #6f6f6f !important;
}

.article-date {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #6f6f6f;
    letter-spacing: -0.28px;
    line-height: 17.92px;
}



.article-hero-image {
    width: 100%;
    max-width: 800px;
    height: 600px;
    border-radius: 12px;
    overflow: hidden;
    margin: 0 auto;
}

.hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Article Note */
.article-note {
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
}

/* 모든 해상도에서 적용되는 article content 기본 스타일 */
.article-content-paragraph {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 18px;
    font-weight: 400;
    color: #161616;
    line-height: 28.8px;
    margin-bottom: 28px;
}

.article-content-heading {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 24px;
    font-weight: 600;
    color: #161616;
    line-height: 38.4px;
    margin: 56px 0 28px 0;
}

/* article-content-paragraph 다음에 article-content-heading이 올 때 상단 마진 조정 */
.article-content-paragraph + .article-content-heading {
    margin-top: 56px;
}

/* Related Posts Section */
.related-posts-section {
    position: relative;
    padding: 64px 0 80px 0;
}

.related-posts-title {
    font-family: 'Hubot Sans', sans-serif;
    font-size: 24px;
    font-weight: 500;
    color: #161616;
    letter-spacing: -0.48px;
    line-height: 30.72px;
    margin-bottom: 48px;
}

.related-posts-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

.related-article {
    display: block;
    text-decoration: none;
    color: inherit;
}

.related-article-image {
    width: 100%;
    aspect-ratio: 4/3;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 24px;
}

.related-article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.related-article:hover .related-article-image img {
    transform: scale(1.05);
}

.related-article-content {
    padding: 0 8px;
}

.related-article-info {
    margin-bottom: 20px;
}

.related-article-category {
    font-family: 'Hubot Sans', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #161616;
    letter-spacing: -0.28px;
    line-height: 17.92px;
    margin-bottom: 12px;
    display: block;
}

.related-article-title {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 24px;
    font-weight: 600;
    color: #161616;
    letter-spacing: -0.48px;
    line-height: 30.72px;
    margin: 0;
}

.related-article-meta {
    display: flex;
    align-items: center;
    gap: 8px;
}

.related-article-author {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #6f6f6f;
    letter-spacing: -0.28px;
    line-height: 17.92px;
}

.related-article-dot {
    width: 2px !important;
    height: 2px !important;
    background-color: currentColor !important;
    border-radius: 50% !important;
    display: inline-block !important;
    flex-shrink: 0 !important;
    color: #6f6f6f !important;
}

.related-article-date {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #6f6f6f;
    letter-spacing: -0.28px;
    line-height: 17.92px;
}

