/* Contact Page Styles */
.contact-main {
    background: #f9fbff;
    min-height: 100vh;
    position: relative;
}

/* Contact page specific body padding adjustment */
body.contact-page {
    padding-top: 70px;
}

.contact-main .vertical-line-background {
    position: absolute;
    left: 50%;
    top: 0;
    width: 1320px;
    height: 100%;
    transform: translateX(-50%);
    border-left: 0.5px solid rgba(0, 0, 0, 0.08);
    border-right: 0.5px solid rgba(0, 0, 0, 0.08);
    pointer-events: none;
    z-index: 1;
}

.contact-header {
    padding: 32px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.contact-header-container {
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 40px;
    text-align: center;
}

.contact-title {
    font-family: 'Hubot Sans', sans-serif;
    font-weight: 500;
    font-size: 32px;
    color: #161616;
    letter-spacing: -0.64px;
    line-height: 1.28;
}

.contact-form-section {
    padding: 105px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    position: relative;
}

.contact-form-container {
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    gap: 150px;
}

.contact-left {
    flex: 1;
}

.contact-heading {
    font-family: 'Hubot Sans', sans-serif;
    font-weight: 500;
    font-size: 40px;
    color: #161616;
    letter-spacing: -0.8px;
    line-height: 1.28;
    margin-bottom: 60px;
}

.contact-description {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 15px;
    color: #161616;
    line-height: 1.6;
    letter-spacing: -0.3px;
}

.contact-right {
    flex: 1;
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.form-inputs {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.form-input,
.form-textarea {
