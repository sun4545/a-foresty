/* Writers Section */
.writers-section {
    padding: 64px 0 80px 0;
    background-color: transparent;
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
    position: relative;
    z-index: 0;
}

.writers-rolling-container {
    overflow-x: hidden;
    overflow-y: visible;
    position: relative;
    width: 100%;
    max-width: 1320px;
    margin: 0 auto;
    padding: 20px 0;
}

.writers-rolling-container::before,
.writers-rolling-container::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 10;
    pointer-events: none;
}

.writers-rolling-container::before {
    left: 0;
    background: linear-gradient(to right, #f9fbff 0%, rgba(249, 251, 255, 0) 100%);
}

.writers-rolling-container::after {
    right: 0;
    background: linear-gradient(to left, #f9fbff 0%, rgba(249, 251, 255, 0) 100%);
}

.writers-rolling-track {
    display: flex;
    gap: 30px;
    animation: rollWriters 27.27s linear infinite;
    width: max-content;
    padding: 10px 0;
}

@keyframes rollWriters {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(-50%);
    }
}

.writers-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    position: relative;
}

.writer-card {
