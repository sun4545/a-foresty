    transform: translateY(0) !important;
    box-shadow: none !important;
}

.highlight-content {
    display: flex;
    flex-direction: column;
    gap: 15px;
    flex: 1;
    max-width: calc(100% - 277px - 200px);
}

.post-excerpt {
    font-size: 14px;
    line-height: 1.5;
    color: #6f6f6f;
    margin-bottom: 15px;
    display: -webkit-box;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 42px;
}

.highlight-image {
    width: 100%;
    max-width: 277px;
    aspect-ratio: 4/3;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    justify-self: center;
}

.highlight-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.highlight-post:hover .highlight-image img {
    transform: scale(1.05) !important;
}

/* highlight-post 링크 스타일 */
.highlight-post-link {
    display: block;
    text-decoration: none;
    color: inherit;
}

/* highlight-post hover 효과 */
.highlight-post:hover {
    transform: translateY(-4px) !important;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05) !important;
    background-color: #ffffff !important;
