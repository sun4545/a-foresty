    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transform: translateY(0);
    box-shadow: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
}

.writer-card * {
    text-decoration: none !important;
}

.writer-card {
    text-decoration: none !important;
}

.writer-card:hover {
    transform: translateY(-8px);
