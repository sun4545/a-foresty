    .search-top {
        height: 80px;
        padding: 0 30px;
    }
    
    .search-top-content {
        max-width: 90%;
        justify-content: center;
        position: relative;
    }
    
    .search-logo-img {
        width: 150px;
        height: 22px;
    }
    
    .search-main {
        padding: 100px 30px 30px 30px;
        max-width: 90%;
    }
    
    .search-input-wrapper {
        margin-bottom: 35px;
    }
    
    .search-input {
        width: 100%;
