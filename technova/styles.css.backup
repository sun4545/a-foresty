    }
    
    .search-input {
        width: 100%;
        padding: 16px 16px 16px 48px;
        border: 1px solid #e5e5e5;
        border-radius: 8px;
        font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
        font-size: 16px;
        background-color: #f8f9fa;
        outline: none;
        transition: border-color 0.2s ease, background-color 0.2s ease;
    }
    
    .search-input:focus {
        border-color: #4f4fff;
        background-color: #ffffff;
    }
    
    .search-icon {
        left: 16px;
        width: 20px;
        height: 20px;
        color: #666;
    }
    
    .search-section-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 16px;
        letter-spacing: -0.4px;
        color: #161616;
        font-family: 'Hubot Sans', sans-serif;
    }
    
    .search-results-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: 16px;
        width: 100%;
    }
    
    .search-result-item {
        display: flex;
        flex-direction: row;
        gap: 16px;
        padding: 0;
        background: transparent;
        border: none;
        text-decoration: none;
    }
    
    .search-result-item:hover {
        background: transparent;
        transform: none;
        box-shadow: none;
    }
    
