/* Subscribe Popup Styles */
.subscribe-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.subscribe-popup-overlay.active {
    opacity: 1;
    visibility: visible;
}

.subscribe-popup-container {
    background: #ffffff;
    border-radius: 16px;
    max-width: 540px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    transform: scale(0.9);
    transition: transform 0.3s ease;
}

.subscribe-popup-overlay.active .subscribe-popup-container {
    transform: scale(1);
}

.subscribe-popup-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 32px 32px 24px 32px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}

.subscribe-popup-title {
    font-family: 'Hubot Sans', sans-serif;
    font-weight: 600;
    font-size: 24px;
    color: #161616;
    margin: 0;
    letter-spacing: -0.48px;
}

.subscribe-popup-close {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    border-radius: 8px;
    color: #6F6F6F;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.subscribe-popup-close:hover {
    background: rgba(0, 0, 0, 0.05);
    color: #161616;
}

.subscribe-popup-content {
    padding: 32px;
    position: relative;
    background: linear-gradient(45deg, rgba(79, 79, 255, 0.02), rgba(79, 79, 255, 0.01), rgba(79, 79, 255, 0.02));
    animation: gradient-shift 6s ease-in-out infinite;
    border-radius: 12px;
}

.subscribe-hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    margin-bottom: 32px;
    text-align: center;
}

.subscribe-hero-image {
    width: 160px;
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: image-float 2.5s ease-in-out infinite;
}

.hero-lightbulb {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 8px 24px rgba(79, 79, 255, 0.2));
    animation: lightbulb-glow 2s ease-in-out infinite;
}

@keyframes image-float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-4px);
    }
}

@keyframes lightbulb-glow {
    0%, 100% {
        filter: drop-shadow(0 8px 24px rgba(79, 79, 255, 0.2)) brightness(1);
    }
    50% {
        filter: drop-shadow(0 12px 32px rgba(79, 79, 255, 0.4)) brightness(1.1);
    }
}

@keyframes gradient-shift {
    0%, 100% {
        background: linear-gradient(45deg, rgba(79, 79, 255, 0.02), rgba(79, 79, 255, 0.01), rgba(79, 79, 255, 0.02));
    }
    25% {
        background: linear-gradient(135deg, rgba(79, 79, 255, 0.01), rgba(79, 79, 255, 0.03), rgba(79, 79, 255, 0.01));
    }
    50% {
        background: linear-gradient(225deg, rgba(79, 79, 255, 0.02), rgba(79, 79, 255, 0.01), rgba(79, 79, 255, 0.02));
    }
    75% {
        background: linear-gradient(315deg, rgba(79, 79, 255, 0.01), rgba(79, 79, 255, 0.03), rgba(79, 79, 255, 0.01));
    }
}

.subscribe-hero-content {
    max-width: 400px;
}

.subscribe-hero-title {
    font-family: 'Hubot Sans', sans-serif;
    font-weight: 600;
    font-size: 24px;
    color: #161616;
    margin: 0 0 16px 0;
    letter-spacing: -0.48px;
    line-height: 1.3;
}

.subscribe-hero-description {
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 16px;
    color: #6F6F6F;
    line-height: 1.6;
    margin: 0;
}

.subscribe-form-section {
    padding-top: 32px;
}

.subscribe-popup-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.subscribe-input-group {
    display: flex;
    gap: 12px;
}

.subscribe-popup-input {
    flex: 1;
    padding: 16px 20px;
    border: 1px solid #C1C7CD;
    border-radius: 8px;
    font-family: 'Pretendard Variable', sans-serif;
    font-size: 16px;
    background: #ffffff;
    transition: border-color 0.2s ease;
}

.subscribe-popup-input:focus {
    outline: none;
    border-color: #4F4FFF;
}

.subscribe-popup-input::placeholder {
