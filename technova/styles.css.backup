/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Hubot Sans', 'Pretendard Variable', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #161616;
    background-color: #f9fbff;
    overflow-x: hidden;
    padding-top: 140px;
}

/* Main content wrapper */
.main-content {
    background-color: #f9fbff;
}

/* Background Grid */
.background-grid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
}

.vertical-line {
    position: absolute;
    left: 50%;
    right: 50%;
    top: 0;
    width: 0.5px;
    height: 100%;
    background-color: transparent;
    transform: translateX(-50%);
}

/* Vertical Line (Background) - Figma design implementation */
.vertical-line-background {
    position: fixed;
    left: 50%;
    top: 0;
    width: 1320px;
    height: 100vh;
    transform: translateX(-50%);
    border-left: 0.5px solid rgba(0, 0, 0, 0.08);
    border-right: 0.5px solid rgba(0, 0, 0, 0.08);
    pointer-events: none;
    z-index: 1;
}

/* Deco Elements */
.deco-left, .deco-right {
    position: absolute;
    bottom: -4px;
    width: 8px;
    height: 8px;
    background-image: url('asset/Deco.svg');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    pointer-events: none;
    z-index: 2;
}

.deco-left {
    left: calc(50% - 660px - 4px);
}

.deco-right {
    right: calc(50% - 660px - 4px);
}

/* Footer Deco Elements */
.footer .deco-left, .footer .deco-right {
    bottom: -4px;
}

/* Subscribe Section Deco Elements */
.subscribe-section .deco-left, .subscribe-section .deco-right {
    bottom: -4px;
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Header */
.header {
    background-color: #ffffff;
    border-bottom: 0.5px solid #DDE1E6;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition: transform 0.3s ease, opacity 0.3s ease;
    transform: translateY(0);
    opacity: 1;
}

.header.hidden {
    transform: translateY(-100%);
    opacity: 0;
}

.header-container {
    padding: 0;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.header-content {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Desktop (1025px 이상) */
@media (min-width: 1025px) {
    .header-container {
        padding: 0;
    }
}

/* Tablet Large (769px - 1024px) */
@media (max-width: 1024px) and (min-width: 769px) {
    .header-container {
        padding: 0;
    }
    
    .header-content {
        padding: 0 20px;
    }
}

/* Tablet Small (481px - 768px) */
@media (max-width: 768px) and (min-width: 481px) {
    .header-container {
        padding: 0;
    }
    
    .header-content {
        padding: 0 20px;
    }
}

/* Mobile (480px 이하) */
@media (max-width: 480px) {
    .header-container {
        padding: 0;
    }
    
    .header-content {
        padding: 0 20px;
    }
}

.logo {
    display: flex;
    align-items: center;
    text-decoration: none;
}

.logo-img {
    width: 164px;
    height: 24px;
    object-fit: contain;
    display: block;
    filter: brightness(1);
}

.nav {
    display: flex;
    align-items: center;
    gap: 40px;
}

/* Desktop Navigation */
.nav-desktop {
    display: flex;
    align-items: center;
    gap: 40px;
}

/* Mobile Navigation */
.nav-mobile {
    display: none;
    align-items: center;
    gap: 12px;
}

.nav-menu-group {
    display: flex;
    align-items: center;
    gap: 20px;
}

.nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 8px;
    align-items: center;
}

.nav-menu li {
    margin: 0;
    position: relative;
}

.icon-button {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    border-radius: 6px;
    transition: background-color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon-button:hover {
    background-color: rgba(62, 115, 212, 0.05);
}

.icon-button svg {
    width: 20px;
    height: 20px;
    opacity: 0.7;
    transition: opacity 0.2s ease, color 0.2s ease;
    color: #161616;
}

.search-btn {
    width: 40px;
    height: 40px;
    padding: 8px;
}

.search-btn svg {
    width: 24px;
    height: 24px;
}

.icon-button:hover svg {
    opacity: 1;
    color: #4f4fff;
}

.search-btn:hover svg {
    opacity: 1;
    color: #4f4fff;
}

.menu-link {
    font-family: 'Hubot Sans', 'Pretendard Variable', 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 500;
    color: #374151;
    text-decoration: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 2px;
    transition: color 0.3s ease;
    padding: 8px 12px;
    border-radius: 6px;
}

.menu-link:hover {
    color: #4f4fff;
    background-color: rgba(79, 79, 255, 0.05);
}

.menu-link:hover svg {
    color: #4f4fff;
}

.menu-link.blog-menu {
    position: relative;
    display: flex;
    align-items: center;
    gap: 2px;
    width: fit-content;
}

.blog-dropdown {
    position: fixed;
    top: 78px;
    left: 0;
    transform: translateY(-10px);
    background: #ffffff;
    border: 1px solid #DDE1E6;
    border-radius: 12px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    width: 191px;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s ease;
    overflow: hidden;
    min-width: max-content;
}

.blog-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.blog-dropdown-item {
    display: block;
    padding: 15px 18px;
    color: #161616;
    text-decoration: none;
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 14px;
    font-weight: 500;
    line-height: 17.92px;
    transition: background-color 0.2s ease;
    height: 48px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.blog-dropdown-item:last-child {
    border-bottom: none;
}

.blog-dropdown-item:hover {
    background-color: #F9FAFB;
    color: #161616;
}

/* 반응형 드롭다운 */
/* Tablet Large (769px - 1024px) */
@media (max-width: 1024px) and (min-width: 769px) {
    .blog-dropdown {
        width: 180px;
    }
}

/* Tablet Small (481px - 768px) */
@media (max-width: 768px) and (min-width: 481px) {
    .blog-dropdown {
        width: 160px;
    }
    
    .blog-dropdown-item {
        padding: 12px 16px;
        font-size: 13px;
        height: 44px;
    }
}

/* Mobile (480px 이하) */
@media (max-width: 480px) {
    .blog-dropdown {
        width: 140px;
    }
    
    .blog-dropdown-item {
        padding: 10px 14px;
        font-size: 12px;
        height: 40px;
    }
}

.arrow-icon {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0.6;
    transform: rotate(0deg);
}

.menu-link.blog-menu.active .arrow-icon {
    opacity: 1;
    transform: rotate(180deg);
}

.nav-actions {
    display: flex;
    align-items: center;
}

.menu-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'Hubot Sans', sans-serif;
    font-size: 15px;
    font-weight: 500;
    color: #161616;
    cursor: pointer;
    transition: color 0.2s;
}

.menu-item:hover {
    color: #4f4fff;
}

.cta-button {
    background-color: #4f4fff;
    color: #ffffff;
    border: none;
    padding: 0 13px;
    height: 40px;
    border-radius: 6px;
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s;
    display: flex;
    align-items: center;
}

.cta-button:hover {
    background-color: #3a3ad8;
}

/* Hamburger Button */
.hamburger-btn {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 4px;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
}

.hamburger-btn:hover {
    background-color: rgba(79, 79, 255, 0.05);
}

.hamburger-line {
    width: 18px;
    height: 2px;
    background-color: #161616;
    border-radius: 1px;
    transition: all 0.3s ease;
}

.hamburger-btn.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.hamburger-btn.active .hamburger-line:nth-child(2) {
    opacity: 0;
}

.hamburger-btn.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
}

/* Search Overlay */
.search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 99999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    -webkit-overflow-scrolling: touch;
}

.search-overlay.active {
    opacity: 1;
    visibility: visible;
}

.search-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

/* Top 영역: 로고와 닫기 버튼 */
.search-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 86px;
    background-color: #ffffff;
    z-index: 10;
}

.search-top-content {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 800px;
    position: relative;
}

.search-logo {
    display: flex;
    justify-content: center;
    align-items: center;
}

.search-logo-img {
    width: 164px;
    height: 24px;
    object-fit: contain;
}

.search-close-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: #6f6f6f;
    border-radius: 4px;
    transition: background-color 0.2s ease;
}

.search-close-btn:hover {
    background-color: #f0f0f0;
}

/* Search + List 영역 */
.search-main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    max-width: 800px;
    padding: 110px 0 40px 0;
    height: 100vh;
    box-sizing: border-box;
}

.search-input-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    position: relative;
    margin-bottom: 40px;
}

.search-icon {
    position: absolute;
    left: 16px;
    color: #6f6f6f;
    z-index: 1;
}

.search-input {
    width: 100%;
    padding: 16px 16px 16px 48px;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 16px;
    background-color: #f8f9fa;
    outline: none;
    transition: border-color 0.2s ease, background-color 0.2s ease;
}

.search-input:focus {
    border-color: #4f4fff;
    background-color: #ffffff;
}



.search-close-btn {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    border-radius: 6px;
    transition: background-color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 16px;
}

.search-close-btn:hover {
    background-color: rgba(62, 115, 212, 0.05);
}

.search-close-btn svg {
    width: 24px;
    height: 24px;
    opacity: 0.7;
    transition: opacity 0.2s ease, color 0.2s ease;
    color: #161616;
}

.search-close-btn:hover svg {
    opacity: 1;
    color: #4f4fff;
}

.search-content {
    width: 100%;
    overflow-y: auto;
    max-height: calc(100vh - 200px); /* 상단 영역과 검색창을 제외한 높이 */
}

.search-recent {
    width: 100%;
    padding: 0 8px;
}

.search-results {
    width: 100%;
    padding: 0 8px;
}

.search-section-title {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 20px;
    font-weight: 500;
    color: #161616;
    margin-bottom: 24px;
    letter-spacing: -0.48px;
    width: 100%;
    line-height: 128%;
}

.search-results-list {
    display: flex;
    flex-direction: column;
    gap: 24px;
    width: 100%;
}

.search-result-item {
    display: flex;
    gap: 20px;
    text-decoration: none;
    color: inherit;
    transition: color 0.2s ease;
}

.search-result-item:hover {
    color: #4f4fff;
}

.search-result-image {
    width: 120px;
    height: 90px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
}

.search-result-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.search-result-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 6px; /* 모바일 기준 갭 6 */
    flex: 1;
    min-width: 0;
}

.search-result-category {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #161616;
    letter-spacing: -0.28px;
}

.search-result-title {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #161616;
    line-height: 1.4;
    letter-spacing: -0.36px;
    margin: 0;
}

.search-result-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #6f6f6f;
    font-weight: 500;
}

.search-result-author {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
}

.search-result-dot {
    font-size: 12px;
}

.search-result-date {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
}

.search-no-results {
    text-align: center;
    padding: 60px 20px;
    color: #6f6f6f;
}

/* 검색 하이라이트 스타일 */
.search-highlight {
    background-color: #4f4fff;
    color: white;
    padding: 1px 3px;
    border-radius: 2px;
    font-weight: 600;
    display: inline-block;
    line-height: 1.2;
}

.search-no-results p:first-child {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 18px;
    font-weight: 500;
    color: #161616;
    margin-bottom: 8px;
}

.search-no-results p:last-child {
    font-family: 'Hubot Sans', 'Pretendard Variable', sans-serif;
    font-size: 14px;
    color: #6f6f6f;
}

/* 모바일 검색창 스타일 (Toss Tech 스타일) */
@media (max-width: 768px) {
    .search-top {
        height: 80px;
        padding: 0 20px;
    }
    
    .search-top-content {
        max-width: 100%;
        padding: 0;
        justify-content: center;
        position: relative;
    }
    
    .search-logo {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .search-logo-img {
        width: 140px;
