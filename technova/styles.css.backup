        background-color: #f8f9fa;
        outline: none;
        transition: border-color 0.2s ease, background-color 0.2s ease;
    }
    
    .search-input:focus {
        border-color: #4f4fff;
        background-color: #ffffff;
    }
    
    .search-section-title {
        font-size: 19px;
        margin-bottom: 22px;
    }
    
    .search-results-list {
        gap: 22px;
    }
    
    .search-result-item {
        gap: 18px;
    }
    
    .search-result-image {
        width: 110px;
        height: 82px;
    }
    
    .search-result-title {
        font-size: 17px;
    }
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
