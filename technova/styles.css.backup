}

.subscribe-popup-button {
    padding: 16px 32px;
    background: #4F4FFF;
    color: #ffffff;
    border: none;
    border-radius: 8px;
    font-family: 'Hubot Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
