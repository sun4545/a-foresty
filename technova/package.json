{
  "name": "dbd-blog-frontend",
  "version": "1.0.0",
  "description": "DESIGN. BUILD. DEPLOY. Blog Frontend",
  "main": "js/main.js",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "server": "node server.js",
    "dev:server": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss css/main.css -o dist/main.min.css",
    "build:js": "webpack --mode production",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "postcss css/main.css -o dist/main.min.css --watch",
    "watch:js": "webpack --mode development --watch",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,json}\"",
    "test": "jest",
    "serve": "live-server --port=3000 --open=/index.html"
  },
  "keywords": [
    "frontend",
    "blog",
    "responsive",
    "modern"
  ],
  "author": "DBD Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "colorthief": "^2.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "nodemailer": "^7.0.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
